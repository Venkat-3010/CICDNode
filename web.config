<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- Route all requests to server.js via iisnode -->
    <handlers>
      <add name="iisnode"
           path="server.js"
           verb="*"
           modules="iisnode"
           resourceType="Unspecified" />
    </handlers>

    <!-- URL rewrite rules -->
    <rewrite>
      <rules>

        <!-- Allow static files (if any) -->
        <rule name="StaticFiles" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- Send everything else to Node -->
        <rule name="NodeApp" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="server.js" />
        </rule>

      </rules>
    </rewrite>

    <!-- Pass Node errors through IIS -->
    <httpErrors existingResponse="PassThrough" />

    <!-- iisnode settings -->
    <iisnode loggingEnabled="true" devErrorsEnabled="false" />

  </system.webServer>
</configuration>
